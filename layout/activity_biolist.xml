<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".biolist">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="#FAF1E6"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Soal Biologi"
                android:textSize="26dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />


            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/biology" />

            <Button
                android:id="@+id/sel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4EFE7"
                android:gravity="center"
                android:text="Sel"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/biology" />

            <Button
                android:id="@+id/jaringan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4EFE7"
                android:gravity="center"
                android:text="Jaringan"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/biology" />

            <Button
                android:id="@+id/sistemgerak"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4EFE7"
                android:gravity="center"
                android:text="Sistem Gerak"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/biology" />

            <Button
                android:id="@+id/sistemsirkulasi"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4EFE7"
                android:gravity="center"
                android:text="Sistem Sirkulasi"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/biology" />

            <Button
                android:id="@+id/sistempencernaan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4EFE7"
                android:gravity="center"
                android:text="Sistem Pencernaan"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />


        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="#FAF1E6"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Video Biologi"
                android:textSize="26dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                />


            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/biology" />

            <Button
                android:id="@+id/selvideo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4EFE7"
                android:gravity="center"
                android:text="Sel"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/biology" />

            <Button
                android:id="@+id/jaringanvideo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4EFE7"
                android:gravity="center"
                android:text="Jaringan"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/biology" />

            <Button
                android:id="@+id/sistemgerakvideo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4EFE7"
                android:gravity="center"
                android:text="Sistem Gerak"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/biology" />

            <Button
                android:id="@+id/sistemsirkulasivideo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4EFE7"
                android:gravity="center"
                android:text="Sistem Sirkulasi"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />

            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/biology" />

            <Button
                android:id="@+id/sistempencernaanvideo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4EFE7"
                android:gravity="center"
                android:text="Sistem Pencernaan"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                />
        </LinearLayout>

    </ScrollView>


</LinearLayout>